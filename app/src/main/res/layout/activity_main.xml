<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tbxAltura"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Altura (ex.: 1.70)"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textColorHighlight="@color/orange"
        android:textColorHint="@color/material_on_surface_emphasis_medium"
        android:textColorLink="@color/orange"
        android:textSize="22sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbxPeso"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text"
        android:layout_width="232dp"
        android:layout_height="120dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/calculadora_nde_nimc"
        android:textAlignment="center"
        android:textColor="#F44007"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tbxPeso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tbxPeso"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Peso (ex.: 85.5)"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textColorHighlight="@color/orange"
        android:textColorHint="@color/material_on_surface_emphasis_medium"
        android:textColorLink="@color/orange"
        android:textSize="22sp"
        android:typeface="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tbxAltura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="168dp"
        android:layout_height="60dp"
        android:background="@color/orange"
        android:text="Calcular"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbxAltura" />
</androidx.constraintlayout.widget.ConstraintLayout>